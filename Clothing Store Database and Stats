--display the database grouped by color.
SELECT * FROM Pookies;
SELECT color, SUM(inventory) FROM Pookies GROUP BY color;

--What is the average price of pink items?
SELECT AVG(price) "average price of pink items"
FROM Pookies
Where color="pink";

--What are those mose expensive items in the store?
SELECT item, price "Most Expensive Items"
FROM Pookies
order by price desc
limit 5; 
